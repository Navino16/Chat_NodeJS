<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Chat</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="header">
      <div>
        <h1 class="title"></h1>
      </div>
    </div>
    <div class="container">
      <div class="row">
          <form id="form_chat" autocomplete="off">
            <div class="input-group">
              <input id="message" class="form-control" type="text" placeholder="Saisissez un message" size="50"></input>
              <div class="input-group-btn">
                <input type="submit" class="btn btn-default" id="send_message" value="Envoyer"></input>
              </div>
            </div>
          </form>
      </div>
      <div class="row" id="divChat">
          <div id="chat">
          </div>
      </div>
      <div>
        <a href="/"><button class="btn btn-default">Quitter</button></a>
      </div>
    </div>
    <p id="id_chat" style="display: none;"><%= id %></p>
    <p id="pseudo" style="display: none;"><%= pseudo %></p>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/js/chat.js"></script>
  </body>
</html>
